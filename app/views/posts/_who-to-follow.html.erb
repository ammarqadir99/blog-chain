<div class="column">
	<nav class="panel">
		<p class="panel-heading">Who to Follow</p>

    <% @users.each do |usr| %>
      <div class="panel-block">
        <article class="media">
          <div class="media-left">
            <figure class="image is-32x32">
            <%= gravatar_image_tag(usr.email, size: 64, alt: usr.name) %>
            </figure>
          </div>
          <div class="media-content">
            <div class="content">
              <p>
                <strong><%= usr.name %> </strong>
                <small> <%= usr.email %> User.bio </small>
                <button type="button" class="btn btn" > Follow </button>
              </p>
            </div>
          </div>
        </article>
      </div>
    <% end %>

		<div class="panel-block">
      <article class="media">
        <div class="media-left">
          <figure class="image is-32x32">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong>John Smith</strong>
              <small>@johnsmith</small>
            </p>
          </div>
        </div>
      </article>
	  </div>
	</nav>
</div>
